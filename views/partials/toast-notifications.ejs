<!-- Toast Notifications Container -->
<div id="toastContainer" class="fixed top-4 right-4 z-50 space-y-2 max-w-md w-full pointer-events-none"></div>

<script>
    // Toast notification system
    class ToastManager {
        constructor() {
            this.container = document.getElementById('toastContainer');
            this.toasts = [];
            this.maxToasts = 5;
        }

        show(message, type = 'info', duration = 3000) {
            // Remove oldest toast if at max capacity
            if (this.toasts.length >= this.maxToasts) {
                const oldest = this.toasts.shift();
                oldest.element.remove();
            }

            const toast = this.createToast(message, type);
            this.container.appendChild(toast.element);
            this.toasts.push(toast);

            // Animate in
            setTimeout(() => {
                toast.element.classList.remove('opacity-0', 'translate-x-full');
                toast.element.classList.add('opacity-100', 'translate-x-0');
            }, 10);

            // Auto remove after duration
            if (duration > 0) {
                setTimeout(() => {
                    this.remove(toast);
                }, duration);
            }

            return toast;
        }

        createToast(message, type) {
            const id = `toast-${Date.now()}-${Math.random().toString(36).substr(2, 9)}`;
            
            // Type configurations
            const configs = {
                success: {
                    bg: 'bg-green-600',
                    border: 'border-green-700',
                    icon: '<svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path></svg>',
                    text: 'text-white'
                },
                error: {
                    bg: 'bg-red-600',
                    border: 'border-red-700',
                    icon: '<svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"></path></svg>',
                    text: 'text-white'
                },
                warning: {
                    bg: 'bg-yellow-600',
                    border: 'border-yellow-700',
                    icon: '<svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 9v2m0 4h.01m-6.938 4h13.856c1.54 0 2.502-1.667 1.732-3L13.732 4c-.77-1.333-2.694-1.333-3.464 0L3.34 16c-.77 1.333.192 3 1.732 3z"></path></svg>',
                    text: 'text-white'
                },
                info: {
                    bg: 'bg-blue-600',
                    border: 'border-blue-700',
                    icon: '<svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 16h-1v-4h-1m1-4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"></path></svg>',
                    text: 'text-white'
                }
            };

            const config = configs[type] || configs.info;

            const toastElement = document.createElement('div');
            toastElement.id = id;
            toastElement.className = `pointer-events-auto opacity-0 translate-x-full transition-all duration-300 ease-out transform ${config.bg} ${config.border} border rounded-lg shadow-lg`;
            
            toastElement.innerHTML = `
                <div class="flex items-start gap-3 p-3">
                    <div class="flex-shrink-0 ${config.text}">
                        ${config.icon}
                    </div>
                    <div class="flex-1 min-w-0">
                        <p class="text-sm font-medium ${config.text}">${this.escapeHtml(message)}</p>
                    </div>
                    <button onclick="toastManager.removeById('${id}')" class="flex-shrink-0 ${config.text} hover:opacity-70 transition-opacity">
                        <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"></path>
                        </svg>
                    </button>
                </div>
            `;

            return {
                id,
                element: toastElement,
                type
            };
        }

        remove(toast) {
            if (!toast || !toast.element) return;
            
            toast.element.classList.remove('opacity-100', 'translate-x-0');
            toast.element.classList.add('opacity-0', 'translate-x-full');
            
            setTimeout(() => {
                toast.element.remove();
                const index = this.toasts.indexOf(toast);
                if (index > -1) {
                    this.toasts.splice(index, 1);
                }
            }, 300);
        }

        removeById(id) {
            const toast = this.toasts.find(t => t.id === id);
            if (toast) {
                this.remove(toast);
            }
        }

        escapeHtml(text) {
            const div = document.createElement('div');
            div.textContent = text;
            return div.innerHTML;
        }

        success(message, duration) {
            return this.show(message, 'success', duration);
        }

        error(message, duration) {
            return this.show(message, 'error', duration || 5000);
        }

        warning(message, duration) {
            return this.show(message, 'warning', duration);
        }

        info(message, duration) {
            return this.show(message, 'info', duration);
        }
    }

    // Initialize toast manager
    const toastManager = new ToastManager();
    window.toastManager = toastManager;

    // Helper functions for convenience
    window.showToast = (message, type = 'info', duration = 3000) => {
        return toastManager.show(message, type, duration);
    };

    window.showSuccess = (message, duration = 3000) => {
        return toastManager.success(message, duration);
    };

    window.showError = (message, duration = 5000) => {
        return toastManager.error(message, duration);
    };

    window.showWarning = (message, duration = 4000) => {
        return toastManager.warning(message, duration);
    };

    window.showInfo = (message, duration = 3000) => {
        return toastManager.info(message, duration);
    };
</script>
